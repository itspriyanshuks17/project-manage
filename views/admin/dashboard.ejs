<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Asset Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-red-600 text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <h1 class="text-xl font-bold">Asset Management</h1>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm">Welcome, <%= user.name %> (Administrator)</span>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-gray-700 hover:bg-gray-800 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-sign-out-alt mr-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Administrator Dashboard</h2>
            <p class="text-gray-600 mt-2">Complete control over inventory and asset management</p>
        </div>

        <!-- Dashboard Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Add Products Card -->
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Add Products</h3>
                            <p class="text-gray-600 text-sm">Add products to inventory</p>
                        </div>
                        <i class="fas fa-plus-circle text-3xl text-blue-500"></i>
                    </div>
                    <div class="mt-4">
                        <a href="/admin/products" 
                           class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-200 w-full justify-center">
                            <i class="fas fa-plus mr-2"></i>Manage Products
                        </a>
                    </div>
                </div>
            </div>

            <!-- Assign Product Card -->
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Assign Product</h3>
                            <p class="text-gray-600 text-sm">Direct asset assignment</p>
                        </div>
                        <i class="fas fa-hand-holding text-3xl text-green-500"></i>
                    </div>
                    <div class="mt-4">
                        <a href="/admin/assign" 
                           class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition duration-200 w-full justify-center">
                            <i class="fas fa-arrow-right mr-2"></i>Assign Assets
                        </a>
                    </div>
                </div>
            </div>

            <!-- Return Product Card -->
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Return Product</h3>
                            <p class="text-gray-600 text-sm">Process asset returns</p>
                        </div>
                        <i class="fas fa-undo text-3xl text-orange-500"></i>
                    </div>
                    <div class="mt-4">
                        <a href="/admin/return" 
                           class="inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded hover:bg-orange-700 transition duration-200 w-full justify-center">
                            <i class="fas fa-undo mr-2"></i>Process Returns
                        </a>
                    </div>
                </div>
            </div>

            <!-- Stock Card -->
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Stock</h3>
                            <p class="text-gray-600 text-sm">Monitor inventory levels</p>
                        </div>
                        <i class="fas fa-boxes text-3xl text-purple-500"></i>
                    </div>
                    <div class="mt-4">
                        <a href="/admin/stock" 
                           class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 transition duration-200 w-full justify-center">
                            <i class="fas fa-list mr-2"></i>View Stock
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Overview -->
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">System Overview</h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="text-center p-4 bg-blue-50 rounded-lg">
                    <i class="fas fa-boxes text-2xl text-blue-600 mb-2"></i>
                    <p class="text-sm text-gray-600">Total Products</p>
                    <p class="text-2xl font-bold text-blue-600">-</p>
                </div>
                <div class="text-center p-4 bg-green-50 rounded-lg">
                    <i class="fas fa-users text-2xl text-green-600 mb-2"></i>
                    <p class="text-sm text-gray-600">Active Users</p>
                    <p class="text-2xl font-bold text-green-600">-</p>
                </div>
                <div class="text-center p-4 bg-yellow-50 rounded-lg">
                    <i class="fas fa-clock text-2xl text-yellow-600 mb-2"></i>
                    <p class="text-sm text-gray-600">Pending Requests</p>
                    <p class="text-2xl font-bold text-yellow-600">-</p>
                </div>
                <div class="text-center p-4 bg-purple-50 rounded-lg">
                    <i class="fas fa-handshake text-2xl text-purple-600 mb-2"></i>
                    <p class="text-sm text-gray-600">Assets Assigned</p>
                    <p class="text-2xl font-bold text-purple-600">-</p>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="mt-8 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
                <i class="fas fa-clock mr-2"></i>Recent System Activity
            </h3>
            <div class="space-y-4">
                <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-blue-500 text-lg"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">System Status</p>
                        <p class="text-sm text-gray-500">Asset Management System is running smoothly</p>
                    </div>
                    <div class="ml-auto text-xs text-gray-400">
                        Just now
                    </div>
                </div>
                
                <div class="flex items-center p-3 bg-green-50 rounded-lg">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-green-500 text-lg"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">Database Connected</p>
                        <p class="text-sm text-gray-500">Successfully connected to MySQL database</p>
                    </div>
                    <div class="ml-auto text-xs text-gray-400">
                        2 min ago
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Tools -->
        <div class="mt-8 bg-gradient-to-r from-red-500 to-red-600 rounded-lg shadow-md p-6 text-white">
            <h3 class="text-xl font-semibold mb-4">
                <i class="fas fa-tools mr-2"></i>Administrative Tools
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
                    <i class="fas fa-database text-2xl mb-2"></i>
                    <p class="text-sm font-medium">Database Management</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
                    <i class="fas fa-users-cog text-2xl mb-2"></i>
                    <p class="text-sm font-medium">User Management</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
                    <i class="fas fa-chart-line text-2xl mb-2"></i>
                    <p class="text-sm font-medium">Analytics & Reports</p>
                </div>
                <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
                    <i class="fas fa-cog text-2xl mb-2"></i>
                    <p class="text-sm font-medium">System Settings</p>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
